---
layout: default
pagination:
    data: programacion.programacion
    size: 1
    alias: programa
permalink: "programas/{{ programa.titulo | slug }}/"
---
<section class="max-w-content py-10">
  <img class="" src="/static/images/radio-vampira.svg" alt="">
</section>
<section class="flex-center max-w-content gap-14">
  <!-- Imagen -->
  <img class="w-1/3 flex-shrink-0" src="{{ programa.imagen }}" alt="">
  <!-- Descripcion -->
  <div class="flex-grow flex flex-col justify-between">
    <div>
      <!-- Header -->
      <div class="border-b-2 border-blue-900">
        <h2>{{ programa.dia }} {{ programa.hora }}</h2>
        <h1>{{ programa.titulo }}</h1>
        <h3>#MUSICA #PUNK</h3>
      </div>
      <!-- Paragraph-->
      <p class="text-sm">{{ programa.descripcion }}</p>
    </div>
    <div class="flex justify-between">
      <div>
        <p>Musicalizaci√≥n: {{ programa.musicalizacion }}</p>
        <p>Contacto: {{ programa.contacto }}</p>
      </div>
      <div>
        <p class="text-right">Compartir</p>
        <div class="flex">
          <a href="#">
            <svg class="w-6 h-6">
              <use xlink:href="/static/sprites/brands.svg#instagram"></use>
            </svg>
          </a>
          <a href="#">
            <svg class="w-6 h-6">
              <use xlink:href="/static/sprites/brands.svg#spotify"></use>
            </svg>
          </a>
          <a href="#">
            <svg class="w-6 h-6">
              <use xlink:href="/static/sprites/brands.svg#twitter"></use>
            </svg>
          </a>
          <a href="#">
            <svg class="w-6 h-6">
              <use xlink:href="/static/sprites/brands.svg#facebook"></use>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
