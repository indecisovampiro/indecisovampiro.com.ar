---
layout: default
pagination:
    data: programacion.programacion
    size: 1
    alias: programa
permalink: "programas/{{ programa.titulo | slug }}/"
---
<!-- Logo -->
<section class="y flex items-center justify-center">
  <img class="hidden sm:block" src="/static/images/radio-vampira.svg" alt="">
  <img class="block w-56 sm:hidden" src="/static/images/radio-vampira.png" alt="">
</section>

<!-- Card -->
<section class="x y flex flex-col justify-around sm:flex-row">
  <!-- Imagen -->
  <img class="max-w-md" src="{{ programa.imagen }}" alt="">
  <!-- Descripcion -->
  <div class="flex flex-col justify-between gap-4 my-4">
    <!-- Titulo/Subtitulo -->
    <div class="flex flex-col gap-4">
      <!-- Header -->
      <div class="border-b-2 border-blue-900">
        <h2 class="text-2xl uppercase sm:text-3xl">{{ programa.dia }} {{ programa.hora }}</h2>
        <h1 class="text-3xl uppercase sm:text-5xl">{{ programa.titulo }}</h1>
        <h3 class="text-2xl text-blue-800 uppercase sm:text-3xl">{% for t in programa.tags %}#{{t}} {% endfor %}</h3>
      </div>
      <!-- Paragraph-->
      <p class="text-base text-justify">{{ programa.descripcion }}</p>
    </div>
    <!-- Autor/Compartir -->
    <div class="flex items-end justify-between">
      <!-- Autor -->
      <div class="flex flex-col">
        <p class="text-base"><strong>Musicalizaci√≥n</strong>: {{ programa.musicalizacion }}</p>
        <p class="text-base"><strong>Contacto</strong>: {{ programa.contacto }}</p>
      </div>
      <!-- Compartir -->
      <div class="flex flex-col gap-2">
        <p class="text-base text-right border-b-2 border-blue-900">Compartir</p>
        <div class="flex gap-2">
          <a href="https://wa.me/?text={{ site.baseURL }}{{ page.url }}">
            <svg class="w-5 h-5">
              <use xlink:href="/static/sprite.svg#whatsapp"></use>
            </svg>
          </a>
          <a href="https://twitter.com/intent/tweet?url={{ site.baseURL }}{{ page.url }}">
            <svg class="w-5 h-5">
              <use xlink:href="/static/sprite.svg#twitter"></use>
            </svg>
          </a>
          <a href="https://www.facebook.com/sharer/sharer.php?u={{ site.baseURL }}{{ page.url }}">
            <svg class="w-5 h-5">
              <use xlink:href="/static/sprite.svg#facebook"></use>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
