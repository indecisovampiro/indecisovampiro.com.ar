{
  "private": true,
  "scripts": {
    "dev": "run-p dev:netlifycms dev:tailwind dev:eleventy",
    "dev:eleventy": "eleventy --serve --config=eleventy.config.js --quiet",
    "dev:tailwind": "tailwindcss -i tailwind.css -c tailwind.config.js -o public/main.css --watch",
    "dev:netlifycms": "netlify-cms-proxy-server",
    "build": "run-s build:eleventy build:tailwind",
    "build:eleventy": "NODE_ENV=production eleventy --config=eleventy.config.js",
    "build:tailwind": "NODE_ENV=production tailwindcss -i tailwind.css -c tailwind.config.js -o public/main.css --minify",
    "debug": "DEBUG=Eleventy* eleventy",
    "start": "run-p dev:tailwind dev:eleventy # or npm run dev",
    "clean": "rm -rf public"
  },
  "dependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@tailwindcss/typography": "^0.5.2",
    "alpinejs": "^3.9.1",
    "html-minifier": "^4.0.0",
    "html-to-text": "^8.1.0",
    "js-yaml": "^4.1.0",
    "luxon": "^2.3.1",
    "markdown-it": "^12.3.2",
    "tailwindcss": "^3.0.23"
  },
  "devDependencies": {
    "eleventy-plugin-external-links": "^1.1.2",
    "netlify-cms-proxy-server": "^1.3.23",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8"
  }
}
