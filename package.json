{
  "private": true,
  "scripts": {
    "start": "npm-run-all --parallel dev:tailwind dev:eleventy",
    "dev": "npm-run-all --parallel dev:netlifycms dev:tailwind dev:eleventy",
    "dev:eleventy": "eleventy --serve --quiet --config=eleventy.js",
    "dev:tailwind": "tailwindcss -i tailwind.css -c tailwind.config.js -o _site/tailwind.css --watch",
    "dev:netlifycms": "netlify-cms-proxy-server",
    "build": "npm-run-all --serial build:eleventy build:tailwind",
    "build:eleventy": "cross-env NODE_ENV=production eleventy --config=eleventy.js",
    "build:tailwind": "cross-env NODE_ENV=production tailwindcss -i tailwind.css -c tailwind.config.js -o _site/tailwind.css --minify",
    "debug": "DEBUG=Eleventy* eleventy",
    "clean": "rimraf _site"
  },
  "eslintConfig": {
    "extends": "standard"
  },
  "dependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@tailwindcss/typography": "^0.5.2",
    "alpinejs": "^3.9.0",
    "html-minifier": "^4.0.0",
    "html-to-text": "^8.1.0",
    "js-yaml": "^4.1.0",
    "luxon": "^2.3.0",
    "markdown-it": "^12.3.2",
    "tailwindcss": "^3.0.23"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-config-standard": "^16.0.3",
    "netlify-cms-proxy-server": "^1.3.23",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
